<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <%- include('header') %>

    <div class="container mt-5">
        <h3 class="text-center">Tambah Produk</h3>
        <form action="/add-product" method="POST" class="mx-auto" style="width: 550px">

            <div class="mb-3">
                <label for="nama" class="form-label">Nama Produk</label>
                <input type="text" id="nama" name="name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="harga" class="form-label">Harga Produk</label>
                <input type="number" name="price" class="form-control"> 
            </div>

            <div class="mb-2">
                <label for="store_id">Nama Toko</label>
                <select class="form-select" aria-label="Nama Toko" id="store_id" name="store_id">
                    <option value="">Pilih</option>
                    <% store.forEach(store => { %>
                        <option value="<%= store.id %>"><%= store.name %> - <%= store.id %></option>
                    <% }); %>
                </select>

            </div>

            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-primary" type="submit">Simpan</button>
            </div>

        </form>
    </div>
    <%- include('footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


</body>
</html>