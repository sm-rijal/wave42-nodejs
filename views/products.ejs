<body>
        <%- include('header') %>
        <div class="container">
        <h2>Halaman Products</h2>
        
        <% if(messages.success) { %>
            <div class="d-flex justify-content-center">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <p><%= messages.success %></p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        <%}%>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <% products.forEach((item) => { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title">
                        <a href="/detail-product/<%= item.id %>"><%= item.name %></a>
                      </h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%= item.toko %></h6>
                      <p class="card-text"><%= item.price %> </p>
                      <a href="/edit-product/<%= item.id %>" class="card-link">Edit</a>
                      <a href="/delete-product/<%= item.id %>" class="card-link">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>

