<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <%- include('header') %>
    <form action="/edit-product/<%= product.id %>" method="POST">
        <div>
            <label for="nama">Nama Produk</label>
            <input type="text" id="nama" name="name" value="<%= product.name%>">
        </div>
        <div>
            <label for="harga">Harga Produk</label>
            <input type="number" name="price" value="<%= product.price%>">
            <div>
                <label for="store_id">Nama Toko</label>
                <select id="store_id" name="store_id">
                    <option value="">Pilih</option>
                    
                    <% store.forEach(store => { %>
                        <option value="<%= store.id %>" <% if (store.id == product.store_id) { %> selected <%}%> ><%= store.name %></option>
                    <% }); %>

                </select>

            </div>
        </div>

        <button type="submit">Simpan</button>
    </form>
    <%- include('footer') %>

</body>
</html>